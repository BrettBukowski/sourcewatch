<div class="ink-grid vertical-space">
  {{#each}}
  <div {{bind-attr class=":event isRepeatedAction type"}}>
    <div class="column-group">
      <div class="heading all-90 small-80">
        {{#unless isRepeatedAction}}
        {{render "user" actor}}
        <span class="verb">{{verb}}</span>
        <span>
          <a {{bind-attr href="repoUrl"}}>{{highlight-repo repo.name}}</a>
        </span>
        {{/unless}}
      </div>

      <div class="meta all-10 small-20 align-right">
        <time {{bind-attr datetime="created_at"}}>{{relative-date created_at}}</time>
      </div>
    </div>

    <div class="body">
      {{#if payload.commits}}
        <div class="commits">
        {{#each payload.commits}}
          <div class="commit">
            <a {{bind-attr href="commitUrl"}}>
            {{emoji-message message}}
            </a>
          </div>
        {{/each}}
        </div>
      {{/if}}
    </div>
  </div>
  {{/each}}
</div>
