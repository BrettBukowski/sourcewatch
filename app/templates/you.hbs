<div class="ink-grid vertical-space user-profile">
  <div class="column-group">
    <div class="all-10 medium-20 small-30">
      <img {{bind-attr src="session.currentUser.avatar_url"}} height="128" width="128" alt="" />
    </div>

    <div class="all-80 medium-80 small-70">
      <h1>{{session.currentUser.name}}</h1>
      <i class="ion-social-github"></i>
      <a {{bind-attr href="session.currentUser.html_url"}}>{{session.currentUser.login}}</a>
    </div>

  </div>
</div>

<div class="ink-grid vertical-space">
  {{#each}}
  <div {{bind-attr class=":event isRepeatedAction type"}}>
    <div class="column-group">
      <div class="heading all-90 small-80">
        {{#unless isRepeatedAction}}
        {{render "user" actor}}
        <span class="verb">{{verb}}</span>
        <span>
          <a {{bind-attr href="repoUrl"}}>{{highlight-repo repo.name}}</a>
        </span>
        {{/unless}}
      </div>
    </div>
    <div class="meta">
      <time {{bind-attr datetime="created_at"}}>{{relative-date created_at}}</time>
    </div>

    <div class="body">
      {{#if payload.commits}}
        <div class="commits summary">
        {{#each payload.commits}}
          <div class="commit">
            <a {{bind-attr href="commitUrl"}}>
            {{emoji-message message}}
            </a>
          </div>
        {{/each}}
        </div>
      {{/if}}
      {{#if payload.forkee}}
        <div class="description summary">
          {{payload.forkee.description}}
        </div>
      {{/if}}
    </div>
  </div>
  {{/each}}
</div>
